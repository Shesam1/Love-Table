<p id="notice"><%= notice %></p>

<h1>Restaurant Locations</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurant_locations.each do |restaurant_location| %>
      <tr>
        <td><%= restaurant_location.location_id %></td>
        <td><%= restaurant_location.restaurant_id %></td>
        <td><%= link_to 'Show', restaurant_location %></td>
        <td><%= link_to 'Edit', edit_restaurant_location_path(restaurant_location) %></td>
        <td><%= link_to 'Destroy', restaurant_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

